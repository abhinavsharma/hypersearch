{
  "manifest_version": 2,

  "name": "Lumos",
  "description": "Lumos extends your browser.",
  "version": "1.0",

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js"],
          "run_at": "document_start"
      },
      {
        "matches": ["https://cse.google.com/*"],
        "all_frames": true,
        "css": ["google_cse.css"]
      }
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>",
    "webRequest", 
    "webRequestBlocking"
  ]
}