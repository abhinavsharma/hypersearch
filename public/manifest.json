{
    "manifest_version": 2,
    "name": "Lumos",
    "description": "Lumos extends your browser.",
    "version": "0.0.28",
    "web_accessible_resources": [
        "*.png",
        "*.svg"
    ],
    "icons": {
        "128": "logo128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content_script.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "content_frames.js"
            ]
        },
        {
            "matches": [
                "https://cse.google.com/*"
            ],
            "all_frames": true,
            "css": [
                "google_cse.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "storage",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ]
}
