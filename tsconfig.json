{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": false,
        "moduleResolution": "node",
        "jsx": "react",
        "skipLibCheck": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "alwaysStrict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true
    }
}