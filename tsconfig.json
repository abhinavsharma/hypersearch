{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [
            "esnext",
            "dom",
        ],
        "noEmitOnError": true,
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    }
}